<br/>
<%= csrf_meta_tags %>
<div class="col-sm-5" style="margin:0 auto;">
  <div class="card text-center"><br/>
    <h2 class="card-header text-center">アカウント情報編集</h2>
    <div class="card-body">
      <br/>

      <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true) do |f| %>

      <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        </div>
      </div>
    <% end %>

        <div class="field">
          <%= f.label :"アカウント名" %><br />
          <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", size: 23  %>
        </div>
        <br />

        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 23  %>
        </div>
        <br/>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :"変更後パスワード" %> <i>※変更する場合のみ</i><br />
          <%= f.password_field :password, autocomplete: "new-password", size: 23  %>
          <% if @minimum_password_length %>
          <% end %>
        </div>
        <br/>

        <div class="field">
          <%= f.label :"パスワード（確認用）" %> <i>※変更する場合のみ</i><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 23  %>
        </div>
        <br/>

        <div class="field">
          <%= f.label :"現在のパスワード" %><i></i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", size: 23  %>
        </div>
        <br/>

        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-success btn-block" %>
        </div>
        <br/>
      <% end %>

      <%= link_to "キャンセル", account_path %>
    </div>
  </div>
</div>
<br/>