<div id="main">
    <div id="left" style="padding-left: 50px;">
        <div class="row">
                <%= search_form_for @search, url:search_path, remote:true do |f| %>

                <h3 style="margin-top: 30px; margin-left: 30px;">検索一覧</h3>

                    <div class="row">
                        <br/>
                        <div class="col-md-2">
                            <br/>
                            <label>住所・キーワード</label>
                            <%= f.label :address_or_room_type_or_summary_cont, "検索" %>
                            <%= f.search_field :address_or_room_type_or_summary_cont, class: "form-control", placeholder: "エリア名を入力"  %>
                        </div>

                        <div class="col-md-offset-4 col-md-4">
                            <br/>
                            <br/>
                            <%= f.submit "検索", class: "btn btn-primary btn-block" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

    <%= render partial: "rooms/rooms_list", locals: { rooms: @arrRooms } %>