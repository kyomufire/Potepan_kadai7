<div class="row" style="margin-top: 50px; margin-left: 30px;">

    <div class="card">

        <h3 style="margin-top: 30px; margin-left: 30px;">登録施設一覧</h3>
        <br/>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>施設画像</th>
                    <th>施設名</th>
                    <th>紹介文</th>
                    <th>宿泊料金（一泊）</th>
                    <th>作成日</th>
                </tr>
            </thead>
            <tbody>
                <% if @rooms.blank? %>
                    <tr>
                        <td colspan="7" class="has-text-cenrered"><h1>表示できる登録施設はありません。</h1></td>
                    </tr>
                <% end %>

                <% @rooms.each do |room| %>
                    <tr>

                        <td>
                            <% if room.photos.attached? %>
                            <%= image_tag room.photos.first, style: "width: 230px;" %><br/>
                            <% else %>
                            <%= image_tag "default_image_room.png", style: "width: 230px;" %>
                            <% end %>
                        </td>

                        <td>
                            <%= link_to room.room_type, room_path(room), data: { turbolinks: false} %>
                        </td>

                        <td>
                            <%= room.summary %>
                        </td>

                        <td>
                            <%= number_to_currency(room.price) %>
                        </td>

                        <td>
                            <%= I18n.l(room.created_at, format: :full_date) %>
                        </td>
                    </tr>
                <% end %>

            </tbody>
        </table>
    </div>
</div>
<br/>