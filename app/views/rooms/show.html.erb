<div class="row" style="margin-left:10px; margin-right:10px;">
    <div class="col-md-8">
        <br/>

        <div class="row">
            <div class="col-md-11">
                <div class="card">
                    <div class="card-body">
                        <h3>施設の詳細</h3>

                        <p><% if @room %>
                            <%= link_to room_path(@room), data: { turbolinks: false} do %>
                            <% if @room.photos.attached? %>
                            <%= image_tag @room.photos.first, style: "width: 230px;" %><br/>
                            <% else %>
                            <%= image_tag "default_image_room.png", style: "width: 230px;" %>
                            <% end %>
                            <% end %>
                            <% end %>
                        <p><%= @room.room_type %></p>
                        <p><%= @room.summary %></p>
                        <p><%= number_to_currency(@room.price) %>（一泊）</p>

                        <div class="card" style="width: 24rem; margin-left: 70px;">

                            <div class="card-body">

                                <%= form_with(model: [@room, @room.reservations.new], local: true ) do |f| %>
                                <%= render "shared/error", obj:@reservation%>

                                <table>
                                    <tr>
                                        <th><%= f.label :start_date ,"チェックイン" %></th>
                                        <td><%= f.date_field :start_date, min: Time.zone.now %></td>
                                    </tr>
                                    <tr>
                                        <th><%= f.label :end_date ,"チェックアウト" %></th>
                                        <td><%= f.date_field :end_date, min: Time.zone.now %></td>
                                    </tr>
                                    <tr>
                                        <th><%= f.label :人数（半角数字） %></th>
                                        <td><%= f.number_field :number_of_guests %></td>
                                    </tr>
                                </table>


                                <br/>
                                <%= f.submit "予約する", id: "btn_book", class: "btn btn-danger btn-block"%>
                            </div>
                        </div>

                        <%= link_to "戻る", :back %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
<br />